<view class="page">
  <view class="page__bd">
    <wux-cell-group title="收货地址">
      <wux-cell hover-class="none">
        <wux-textarea hasCount rows="3" cursorSpacing="80" placeholder="请输入您的收货地址" />
      </wux-cell>
    </wux-cell-group>
    <view class="sub-title">订单信息</view>
    <wux-wing-blank size="default">
      <wux-card title="长袖" extra="单价：1200">
        <view slot="body">已选购</view>
        <view slot="body">
          <wux-cell-group title="">
            <wux-cell title="100*1" extra="3200"></wux-cell>
            <wux-cell title="200*1" extra="3200"></wux-cell>
          </wux-cell-group>
        </view>
      </wux-card>
    </wux-wing-blank>
  </view>
  <view class="page__bd">
    <wux-wing-blank size="default">
      <wux-card title="西裤" extra="单价：3200">
        <view slot="body">已选购</view>
        <view slot="body">
          <wux-cell-group title="">
            <wux-cell title="100*1" extra="3200"></wux-cell>
            <wux-cell title="200*1" extra="3200"></wux-cell>
          </wux-cell-group>
        </view>
      </wux-card>
    </wux-wing-blank>
  </view>
  <view class="page__bd">
    <wux-cell-group title="">
      <wux-cell title="总价：4400" is-link extra="去支付" bindtap="goList"></wux-cell>
    </wux-cell-group>
  </view>
</view>