<wux-select id="wux-select2" />
<view class="page">
     <view class="page__bd">
      <wux-cell-group title="">
            <wux-cell hover-class="none">
                <wux-input label="学生信息" placeholder="请输入您的手机号码" value="三年二班-周杰伦" />
